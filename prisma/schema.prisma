generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
  relationMode = "prisma"
}

model Cliente {
  id Int @id @default(autoincrement())
  nome String
  email String
  senha String
  cpf String
  telefone_fixo String?
  celular String?
  genero String?

  created_at DateTime? @default(now())
  updated_at DateTime? @default(now())

  endereco Endereco[]
}

model Endereco {
  id Int @id @default(autoincrement())
  cliente Cliente @relation(fields: [cliente_id], references: [id])
  cliente_id Int
  cep String
  logradouro String
  bairro String
  numero String
  complemento String?
  estado String
  cidade String

  @@index([cliente_id])
}

